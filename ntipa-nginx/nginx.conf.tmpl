upstream pool_authserver {
  {{ range $server := .ntipa_apis_authserver }}
  server {{ $server.Value }};
  {{ end }}
}

upstream pool_box {
  {{ range $server := .ntipa_apis_box }}
  server {{ $server.Value }};
  {{ end }}
}

upstream pool_manager {
  {{ range $server := .ntipa_apis_manager }}
  server {{ $server.Value }};
  {{ end }}
}

server {
    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;
    access_log /var/log/nginx/access.log upstreamlog;

         location /authserver {
            proxy_pass http://pool_authserver/authserver;
            proxy_redirect off;
            proxy_set_header        Host            $host;
            proxy_set_header        X-Real-IP       $remote_addr;
            proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header        X-NginX-Proxy   true;
            proxy_http_version 1.1;
    		proxy_set_header Upgrade $http_upgrade;
    		proxy_set_header Connection "upgrade";
          }
          
          location /box {
            proxy_pass http://pool_box/box;
            proxy_redirect off;
            proxy_set_header        Host            $host;
            proxy_set_header        X-Real-IP       $remote_addr;
            proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header        X-NginX-Proxy   true;
            proxy_http_version 1.1;
    		proxy_set_header Upgrade $http_upgrade;
    		proxy_set_header Connection "upgrade";
          }
          
          
         location /manager {
            proxy_pass http://pool_manager/manager;
            proxy_redirect off;
            proxy_set_header        Host            $host;
            proxy_set_header        X-Real-IP       $remote_addr;
            proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header        X-NginX-Proxy   true;
            proxy_http_version 1.1;
    		proxy_set_header Upgrade $http_upgrade;
    		proxy_set_header Connection "upgrade";
          }
          

}

