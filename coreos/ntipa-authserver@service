[Unit]
Description=Nginx Load balance proxy Ntipa
After=etcd.service
After=docker.service
Requires=nginx-discovery@%i.service

[Service]
TimeoutStartSec=0
KillMode=none
EnvironmentFile=/etc/environment
ExecStartPre=-/usr/bin/docker kill nginx%i
ExecStartPre=-/usr/bin/docker rm nginx%i
ExecStartPre=/usr/bin/docker pull tornabene/ntipa-nginx 
ExecStart=/usr/bin/docker run --name nginx%i -p ${COREOS_PUBLIC_IPV4}:%i:80 tornabene/ntipa-nginx
ExecStop=/usr/bin/docker stop nginx%i

[X-Fleet]
X-Conflicts=nginx@*.service
